@model SocialMedia.Models.Post

@{
    ViewBag.Title = "Create Post";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">Create Post</div>
                <div class="card-body">
                    @using (Html.BeginForm("Create", "Post", new { userId = ViewBag.UserId }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            @Html.LabelFor(model => model.PostContent, htmlAttributes: new { @class = "control-label" })
                            @Html.TextAreaFor(model => model.PostContent, new { @class = "form-control", rows = "5" })
                            @Html.ValidationMessageFor(model => model.PostContent, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    }
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            @Html.ValidationSummary(true)
                        </div>
                    }
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            @ViewBag.Error
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
